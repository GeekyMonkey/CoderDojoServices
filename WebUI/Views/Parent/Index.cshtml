@model Adult
@{
    Adult parent = Model;
    ViewBag.Title = "Parent: " + parent.FirstName;
}

@Html.ActionLink("My Kids", "MyKids", "Parent", null, new { data_role="button"})
@Html.ActionLink("My Account", "MyAccount", "Parent", null, new { data_role="button"})
@Html.ActionLink("Log Out", "LogOut", "Home", null, new { data_role="button"})

@section Footer
{
    @if (parent.IsMentor) {
        @Html.ActionLink("Mentor Mode", "Index", "Mentor", null, new { data_role="button"});
    }
}
